# ssh -vT git@github.com  # NOTE: test connection first
Host github.com
	HostName github.com
	Port 22
	User git
	IdentityFile ~/.ssh/git-keys/github
	IdentitiesOnly yes
	UserKnownHostsFile ~/.ssh/git-keys/github.host

# ssh -vT git@gitlab.com  # NOTE: test connection first
Host gitlab.com
	HostName gitlab.com
	Port 22
	User git
	IdentityFile ~/.ssh/git-keys/gitlab
	IdentitiesOnly yes
	UserKnownHostsFile ~/.ssh/git-keys/gitlab.host

# ssh -vT foo@gitlab-tw-gcp OR ssh -vT foo@35.123.456.90
# 自定义名字(可以是任意值)
Host gitlab-tw-gcp
	# 服务器真实 ip 地址/域名
	HostName 35.123.456.90
	# ssh 端口, 默认是 22
	Port 10022
	# 用户名, "git" 用户只用于 github/gitlab 账户
	User foo
	# 私钥地址
	IdentityFile ~/.ssh/config_test/mygitlab
	# 只能通过本文件指定的私钥登录，即便是 eval `ssh-agent` 提供更多的登录凭证
	IdentitiesOnly yes
	# 指定储存登录指纹的文件, 默认保存在 ~/.ssh/known_hosts
	UserKnownHostsFile ~/.ssh/config_test/mygitlab.host
